<Window x:Class="Escape_Room.User_Management.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Escape_Room.User_Management"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <PasswordBox HorizontalAlignment="Center" Width="800"/>
        <PasswordBox x:Name="Password_Box" HorizontalAlignment="Left" Height="30" Margin="250,200,0,0" VerticalAlignment="Top" Width="335" TabIndex="2"/>
        <TextBlock HorizontalAlignment="Left" Height="19" Margin="250,180,0,0" TextWrapping="Wrap" Text="Password:" VerticalAlignment="Top" Width="65"/>
        <TextBox x:Name="Username_Box" HorizontalAlignment="Left" Height="30" Margin="250,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="335" TabIndex="1"/>
        <TextBlock HorizontalAlignment="Left" Height="19" Margin="250,100,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="65"/>
        <Button x:Name="LoginButton" Content="Login" Margin="350,268,350,128" Click="LogginButton_Click" TabIndex="3"/>
        <TextBlock x:Name="ErrorBox" HorizontalAlignment="Left" Height="68" Margin="78,326,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="616"/>

    </Grid>
</Window>
